<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_directions_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/directions_content"
            android:textSize="15sp"
            android:lineSpacingExtra="4sp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>

        <ImageView
            android:id="@+id/iv_directions1"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:src="@drawable/directions1"/>

        <ImageView
            android:id="@+id/directions2"
            android:layout_width="match_parent"
            android:layout_height="277dp"
            android:src="@drawable/directions2"/>

        <ImageView
            android:id="@+id/directions3"
            android:layout_width="match_parent"
            android:layout_height="277dp"
            android:src="@drawable/directions3"/>

    </LinearLayout>

</ScrollView>