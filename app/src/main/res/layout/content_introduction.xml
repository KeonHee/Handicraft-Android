<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="kr.co.landvibe.handicraft.introduction.IntroductionActivity"
        tools:showIn="@layout/activity_introduction"
        tools:ignore="MissingPrefix">

        <TextView
            android:id="@+id/tv_workshop_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="공방 소개"
            android:textSize="25sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="30dp" />

        <Button
            android:id="@+id/bt_workshop_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:text="+"
            app:layout_constraintTop_toTopOf="@id/tv_workshop_intro"
            app:layout_constraintBottom_toBottomOf="@id/tv_workshop_intro"
            app:layout_constraintRight_toRightOf="parent"
            android:background="#00ff0000"/>

        <TextView
            android:id="@+id/tv_workshop_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_workshop_intro"
            android:text="공방 소개글 입니다!!!\ndddd\ndddd\ndddd\ndddd\ndddd"
            android:layout_marginTop="15dp"
            android:paddingLeft="15dp"
            android:textSize="20sp"
            android:visibility="gone"/>

        <View
            android:id="@+id/divider"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/grayLight2"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tv_workshop_content" />

        <TextView
            android:id="@+id/tv_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="about class"
            android:textSize="25sp"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="15dp"/>

        <Button
            android:id="@+id/bt_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:text="+"
            app:layout_constraintTop_toTopOf="@id/tv_class"
            app:layout_constraintBottom_toBottomOf="@id/tv_class"
            app:layout_constraintRight_toRightOf="parent"
            android:background="#00ff0000"/>

        <TextView
            android:id="@+id/tv_class_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_class"
            android:layout_marginTop="15dp"
            android:paddingLeft="15dp"
            android:text="클래스 시간표!!!!!\nㄱ\nㅜ\nㄷ"
            android:textSize="20sp"
            android:visibility="gone"/>

        <View
            android:id="@+id/divider1"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/grayLight2"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tv_class_content" />

        <TextView
            android:id="@+id/tv_directions_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오시는 길"
            android:textSize="25sp"
            app:layout_constraintTop_toBottomOf="@id/divider1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="15dp"/>

        <Button
            android:id="@+id/bt_directions_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="+"
            app:layout_constraintTop_toTopOf="@id/tv_directions_intro"
            app:layout_constraintBottom_toBottomOf="@id/tv_directions_intro"
            app:layout_constraintRight_toRightOf="parent"
            android:background="#00ff0000"/>

        <TextView
            android:id="@+id/tv_directions_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_directions_intro"
            android:layout_marginTop="15dp"
            android:paddingLeft="15dp"
            android:text="오시는길!!!!\n1호선 주안역 내린후 \n511번 탑승\n인하대정문에서 내림\nㄱ\nㅜ\nㄷ\n\n\n\n\n\nt"
            android:textSize="20sp"
            android:visibility="gone"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v4.widget.NestedScrollView>