<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_workshop_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이용방법"
            android:textSize="18sp"
            android:textColor="@color/grayDark3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="30dp" />

        <TextView
            android:id="@+id/tv_workshop_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_workshop_intro"
            android:text="@string/workshop_content"
            android:layout_marginTop="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textSize="15sp"
            android:lineSpacingExtra="4sp"/>

        <View
            android:id="@+id/divider"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/grayLight2"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tv_workshop_content" />

        <TextView
            android:id="@+id/tv_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="목공지도"
            android:textSize="18sp"
            android:textColor="@color/grayDark3"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/tv_class_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_class"
            android:layout_marginTop="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="@string/class_content"
            android:textSize="15sp"
            android:lineSpacingExtra="4sp"/>

        <View
            android:id="@+id/divider1"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/grayLight2"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tv_class_content" />

        <TextView
            android:id="@+id/tv_work"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원 작품 활동"
            android:textSize="18sp"
            android:textColor="@color/grayDark3"
            app:layout_constraintTop_toBottomOf="@id/divider1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/tv_work_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_work"
            android:layout_marginTop="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="@string/work_content"
            android:textSize="15sp"
            android:lineSpacingExtra="4sp"/>

        <View
            android:id="@+id/divider2"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/grayLight2"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tv_work_content" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/divider2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="15dp"
            android:text="제작비용"
            android:textSize="18sp"
            android:textColor="@color/grayDark3"/>

        <TextView
            android:id="@+id/tv_price_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_price"
            android:layout_marginTop="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="@string/price_content"
            android:textSize="15sp"
            android:lineSpacingExtra="4sp"/>

        <View
            android:id="@+id/divider3"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/grayLight2"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tv_price_content" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/divider3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="15dp"
            android:text="운영시간"
            android:textSize="18sp"
            android:textColor="@color/grayDark3"/>

        <TextView
            android:id="@+id/tv_time_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_time"
            android:layout_marginTop="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="@string/time_content"
            android:textSize="15sp"
            android:lineSpacingExtra="4sp"/>

        <View
            android:id="@+id/divider4"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/grayLight2"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tv_time_content" />

        <TextView
            android:id="@+id/tv_material"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/divider4"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="15dp"
            android:text="사용재료"
            android:textSize="18sp"
            android:textColor="@color/grayDark3"/>

        <TextView
            android:id="@+id/tv_material_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_material"
            android:layout_marginTop="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="@string/material_content"
            android:textSize="15sp"
            android:lineSpacingExtra="4sp"/>

        <View
            android:id="@+id/divider5"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/grayLight2"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tv_material_content" />

        <TextView
            android:id="@+id/tv_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/divider5"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="15dp"
            android:text="가구 제작 요청(주문가구)"
            android:textSize="18sp"
            android:textColor="@color/grayDark3"/>

        <TextView
            android:id="@+id/tv_order_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_order"
            android:layout_marginTop="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="@string/order_content"
            android:textSize="15sp"
            android:lineSpacingExtra="4sp"/>

        </android.support.constraint.ConstraintLayout>

</ScrollView>