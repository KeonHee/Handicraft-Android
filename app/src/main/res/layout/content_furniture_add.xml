<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/grayLight1"
        >

        <android.support.v7.widget.CardView
            android:id="@+id/image_container"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            card:cardCornerRadius="0dp"
            android:background="@color/white"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            >
            <!-- temp height -->


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/furniture_desc_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card:cardCornerRadius="0dp"
            android:background="@color/white"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/furniture_add_desc_label"
                    android:textColor="@color/lightBlueDark1"
                    android:textSize="20sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="14dp"
                    >

                    <TextView
                        android:id="@+id/tv_title_label"
                        android:labelFor="@+id/et_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/furniture_add_title_label"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_alignParentStart="true"
                        />

                    <EditText
                        android:id="@+id/et_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:hint="@string/furniture_add_title_hint"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:background="@color/white"
                        android:layout_marginStart="16dp"
                        android:layout_toEndOf="@+id/tv_title_label"
                        />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grayLight1"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="14dp"
                    >

                    <TextView
                        android:id="@+id/tv_price_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/furniture_add_price_label"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_alignParentStart="true"
                        />

                    <EditText
                        android:id="@+id/et_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="@string/furniture_add_price_hint"
                        android:maxLines="1"
                        android:maxLength="12"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:background="@color/white"
                        android:layout_marginStart="16dp"
                        android:layout_toEndOf="@+id/tv_price_label"
                        />
                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grayLight1"
                    />

                <RelativeLayout
                    android:id="@+id/state_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:clickable="true"
                    >

                    <TextView
                        android:id="@+id/tv_state_label"
                        android:labelFor="@+id/tv_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/furniture_add_state_label"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_alignParentStart="true"
                        />

                    <TextView
                        android:id="@+id/tv_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/furniture_add_touch_hint"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_alignParentEnd="true"
                        />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grayLight1"
                    />

                <RelativeLayout
                    android:id="@+id/tv_trade_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:clickable="true"
                    >
                    <TextView
                        android:id="@+id/tv_trade_label"
                        android:labelFor="@+id/tv_trade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/furniture_add_trade_label"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_alignParentStart="true"
                        />

                    <TextView
                        android:id="@+id/tv_trade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/furniture_add_touch_hint"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_alignParentEnd="true"
                        />
                </RelativeLayout>


            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/furniture_detail_desc_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card:cardCornerRadius="0dp"
            android:background="@color/white"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/furniture_add_detail_desc_label"
                    android:textColor="@color/lightBlueDark1"
                    android:textSize="20sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="14dp"
                    >

                    <TextView
                        android:id="@+id/tv_brand_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/furniture_add_brand_label"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_alignParentStart="true"
                        />

                    <EditText
                        android:id="@+id/et_brand"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:hint="@string/furniture_add_brand_hint"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:background="@color/white"
                        android:layout_marginStart="16dp"
                        android:layout_toEndOf="@id/tv_brand_label"
                        />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grayLight1"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="14dp"
                    >

                    <TextView
                        android:id="@+id/tv_type_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/furniture_add_type_label"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_alignParentStart="true"
                        />

                    <EditText
                        android:id="@+id/et_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:hint="@string/furniture_add_type_hint"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:background="@color/white"
                        android:layout_marginStart="16dp"
                        android:layout_toEndOf="@id/tv_type_label"
                        />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grayLight1"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="14dp"
                    >

                    <TextView
                        android:id="@+id/tv_period_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/furniture_add_period_label"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_alignParentStart="true"
                        />

                    <EditText
                        android:id="@+id/et_period"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:background="@color/white"
                        android:layout_toEndOf="@id/tv_period_label"
                        android:layout_alignParentEnd="@id/tv_period_label"
                        android:layout_marginStart="8dp"
                        />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grayLight1"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="14dp"
                    >

                    <TextView
                        android:id="@+id/tv_size_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/furniture_add_size_label"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_alignParentStart="true"
                        />

                    <EditText
                        android:id="@+id/et_size"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:background="@color/white"
                        android:layout_toEndOf="@id/tv_size_label"
                        android:layout_alignParentEnd="@id/tv_size_label"
                        android:layout_marginStart="8dp"
                        />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grayLight1"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="14dp"
                    >

                    <TextView
                        android:id="@+id/tv_desc_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/furniture_add_detail_label"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_alignParentStart="true"
                        />

                    <TextView
                        android:id="@+id/tv_desc_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/furniture_add_touch_hint"
                        android:textSize="14sp"
                        android:textColor="@color/grayLight3"
                        android:layout_alignBottom="@+id/tv_desc_label"
                        android:layout_alignParentEnd="true"
                        />

                    <TextView
                        android:id="@+id/tv_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:visibility="gone"
                        android:layout_below="@id/tv_desc_label"
                        android:layout_alignStart="@+id/tv_desc_label"
                        android:layout_marginStart="8dp"
                        />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grayLight1"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="14dp"
                    >

                    <TextView
                        android:id="@+id/tv_location_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/furniture_add_location_label"
                        android:textSize="14sp"
                        android:textColor="@color/grayLight3"
                        android:layout_alignParentStart="true"
                        />

                    <EditText
                        android:id="@+id/et_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:background="@color/white"
                        android:layout_toEndOf="@id/tv_location_label"
                        android:layout_alignParentEnd="@id/tv_location_label"
                        android:layout_marginStart="8dp"
                        />

                </RelativeLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            >
            <Button
                android:id="@+id/btn_preview"
                android:layout_width="0dp"
                android:layout_height="@dimen/bottom_bar_size"
                android:text="@string/furniture_preview_btn_label"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:background="@color/grayLight3"
                android:layout_weight="1"
                />
            <Button
                android:id="@+id/btn_register"
                android:layout_width="0dp"
                android:layout_height="@dimen/bottom_bar_size"
                android:text="@string/furniture_add_btn_label"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:background="@color/red"
                android:layout_weight="2"
                />

        </LinearLayout>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>